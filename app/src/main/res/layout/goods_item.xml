<?xml version="1.0" encoding="utf-8"?>
<!--CardView卡片式布局   简单的FrameLayout 额外提供了圆角和阴影效果 具有立体感觉-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10px"
    android:padding="8px"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="30px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:layout_marginLeft="20px"
            android:textSize="30px"
            android:layout_marginBottom="10px"
            android:layout_marginTop="10px"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_marginLeft="20px"
            android:layout_below="@id/goods_name"
            android:layout_marginBottom="10px"
            android:layout_marginTop="10px"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff2424"
                android:text="￥"
                android:textSize="8sp"/>
            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff2424"
                android:textSize="15sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginRight="20px"
    android:text="6分钟前"
    android:textColor="#666666"/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20px">
            <com.example.zhuffei.ffei.view.CircleImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@mipmap/m1"
                app:border_width="0px"
                app:border_color="#eeeeee"
                android:layout_margin="10px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:text="yonghu1"
                android:layout_margin="10px"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
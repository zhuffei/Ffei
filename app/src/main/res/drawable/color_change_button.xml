<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充的颜色 -->
    <solid android:color="#728dd6" />
    <!--设置渐变-->
    <gradient android:startColor="#a6e8fa"
        android:endColor="#436fe9"
        android:angle="180"/>
    <!--angle控制渐变的方向-->
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="80px" />
    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:left="20px"
        android:top="20px"
        android:right="20px"
        android:bottom="20px"
        />
</shape>
